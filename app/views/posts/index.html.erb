
<div>
  <h1> Cinemagraphs </h1>
<nav>
    <ul class="nav nav-tabs">
  <li class="active"><a href="#">All</a></li>
  <li><a href="#">Popular</a></li>
  <li><a href="#">New</a></li>
</ul>
</nav>


  <ul>
    <% @posts.each do |post| %>
      <%= image_tag post.cinemagraph_path %>
      <!-- eventually replace with: image_tag post.cinema_still_path -->
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p class='author'>by <%= link_to post.user.username, user_path(post.user) %></p></p>
     <% end %>
     <hr>
  </ul>
</div>

<% if logged_in? %>
  <h3><%= link_to "Create new post" , new_post_path%></h3>
<% end %>
